{% import "_includes/forms" as forms %}

<form id="export-form" class="utility" method="post" accept-charset="UTF-8">
    <input type="hidden" name="action" value="wheelform/entries/export">
    <input type="hidden" name="redirect" value="{{ cpUrl('utilities/wheelform-export')}}">
    {{ csrfInput() }}

    {{
        forms.selectField({
            label: 'Select Form'|t('wheelform'),
            id: 'form-options',
            name: 'form_id',
            options: formOptions,
        })
    }}

    {{ forms.dateField({
        name: 'start_date',
        id: 'start_date',
        label: 'Start Date'|t('wheelform'),
        first: true,
    }) }}

    {{ forms.dateField({
        name: 'end_date',
        id: 'end_date',
        label: 'End Date'|t('wheelform'),
    }) }}

    <div class="buttons">
        <input type="submit" class="btn submit" value="{{ "Export"|t('wheelform') }}"="Backup"|t('app') }}""/>
        <div class="utility-status"></div>
    </div>
</form>

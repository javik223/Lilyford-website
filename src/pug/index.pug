extends _layout

block main
  .flex-container
    .hero.hero--with-gradient-background
      .hero__image
        img(src="/assets/img/homepage-hero.jpg", alt="Doing good has never been better")
      .hero__content.hero__content--bottom
        .medium-10.large-6.medium-centered
          h1.hero__lead Health For Communities
          h4 Through health programmes and Hygiene enhancement

  // extra white space for tablet and large screens
  .padding-top-3.show-for-medium


  .grid-container.grid-x.text-center.padding-2
    cell.medium-10.large-8.medium-centered
      h2.color-crimson Everyone deserves a better life.
      h4.subheader Lilyford Foundation is a not-for-profit organisation that helps people in need and provide opportunities for people to pursue their dreams and lead better lives

  // extra white space for tablet and large screens
  .padding-bottom-2.show-for-medium

  .cell.medium-10.large-8.medium-centered
    .circular-carousel
      .circular-carousel__items.js-circular-carousel
        .circular-carousel__item
          .circular-carousel__image
            img(src="/assets/img/csr1.png", alt="First CSR Image")
          .circular-carousel__content
            h1.uppercase.color-blue.strong Stronger in Health
            p We believe in good health as a first step in living a good life and empowerment. We are empowering people to live better lives.
            p
              a(href="/stronger-in-health", title="Stronger in Health Outreach")
                small.color-crimson FIND OUT MORE

            .circular-carousel__icon
              img(src="/assets/img/medical-icon.svg", alt="Category: Medical Outreach")
        .circular-carousel__item
          .circular-carousel__image
            img(src="/assets/img/csr2.png", alt="First CSR Image")
          .circular-carousel__content
            h1.uppercase.color-blue.strong Stronger in Health
            p We believe in good health as a first step in living a good life and empowerment. We are empowering people to live better lives.
            p
              a(href="/stronger-in-health", title="Stronger in Health Outreach")
                small.color-crimson FIND OUT MORE

            .circular-carousel__icon
              img(src="/assets/img/medical-icon.svg", alt="Category: Medical Outreach")
      .circular-carousel__nav
        .prev
          .icon.icon-arrow-left
        .next
          .icon.icon-arrow-right
  .grid-container
    .grid-x.padding-top-3.padding-bottom-3.text-center
      .cell.medium-8.large-6.medium-centered
        h3.uppercase.color-blue.bold Our Causes &amp; Programmes
        p.subheader Our programmes are holistic and works together to help us achieve our mission to make life better
      .cell.padding-top-3.padding-bottom-3
        .grid-x.small-up-2.medium-up-4.text-center.small-unstack.icon-groups.grid-padding-x.carousel.js-carousel
          a.icon-groups__item
            img(src="/assets/img/health-icon.svg", alt="Health")
            h4.color-blue Health
          a.icon-groups__item
            img(src="/assets/img/education-icon.svg", alt="Education")
            h4.color-purple Education
          a.icon-groups__item
            img(src="/assets/img/welfare-icon.svg", alt="Welfare")
            h4.color-turquoise Welfare
          a.icon-groups__item
            img(src="/assets/img/skill-icon.svg", alt="Skill & Opportunity")
            h4.color-crimson Skill &amp; Opportunity
          a.icon-groups__item
            img(src="/assets/img/education-icon.svg", alt="Education")
            h4.color-purple Education
          a.icon-groups__item
            img(src="/assets/img/welfare-icon.svg", alt="Welfare")
            h4.color-turquoise Welfare
          a.icon-groups__item
            img(src="/assets/img/skill-icon.svg", alt="Skill & Opportunity")
            h4.color-crimson Skill &amp; Opportunity
        .cell.carousel__nav
          .prev
            i.icon.icon-arrow-left &nbsp;
          .next
            i.icon.icon-arrow-right &nbsp;

  .grid-container.padding-bottom-3
    .grid-x
      h3.cell.uppercase.text-center.strong.color-blue Impact
    .grid-x.padding-bottom-2.padding-top-1
      .featured.featured-double-image
        .featured__image
          div
            img(src="assets/img/ogidi-onitsha-1.jpg", alt="")
          div
            img(src="/assets/img/ogidi-onitsha-2.jpg", alt="Doing good has never been better")
        .featured__content
          h4.strong.color-crimson Stronger in Health
          p Medical outreach by Lilyford in Ogidi & Onitsha, located in Anambra State, Nigeria
    .cell.carousel__nav.text-center
          .prev
            i.icon.icon-arrow-left &nbsp;
          .next
            i.icon.icon-arrow-right &nbsp;


  .flex-container
    .large-card.bg-darkblue.color-white.small-order-2
      .large-card__image
        img(src="assets/img/donate-img.jpg", alt="")
      .large-card__content
        h2 Take Action
        p Support the Lilyford programmes by participating in our activities through lending a hand financially or by volunteering

        button.button.uppercase.margin-top-3 JOIN LILYFORD

  .grid-container.margin-top-3.margin-bottom-3
    .grid-x.padding-top-3
      h3.text-center.cell Join us to make lives better
      .cell.medium-6.medium-centered
        .padding-top-2.padding-bottom-2.grid-x
          .cell.small-8.medium-9.text-right
            input(name="Email Address" type="text" placeholder="Email Address")

          .cell.small-4.medium-3
            input(class="button", type="button", value="SIGN UP").button.no-radius
      .cell.medium-8.medium-centered
        .flex-container.align-justify.column
          .grid-x
            p.subheader Follow us on social media
          a(href="http://www.facebook.com" title="Lilyford Foundation on Facebook" target="_blank" rel="noopener").icon.icon-facebook.text-2x
          a(href="http://www.twitter.com" title="Lilyford Foundation on Twitter" target="_blank" rel="noopener").icon.icon-twitter.text-2x
          a(href="http://www.instagram.com" title="Lilyford Foundation on Instagram" target="_blank" rel="noopener").icon.icon-instagram.text-2x
          a(href="htp://www.linkedin.com" title="Lilyford Foundation on Linkedin" target="_blank" rel="noopener").icon.icon-linkedin.text-2x

